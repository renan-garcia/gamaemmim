<div  style="background-color:white">
  <div class="pull-right" style="padding: 10px;">
    <%= link_to "Sair", destroy_admin_session_path,  method: :delete, class: "btn btn-danger" %>
  </div>
  <h1>Contagem unica de Leads: <%= @leads.size %></h1>
  <h1>Contagem total de Leads: <%= @leads.size + @leads_more_ip_filter.size %></h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Ip</th>
        <th>Criado em</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leads.each do |lead| %>
        <tr>
          <td><%= lead.name %></td>
          <td><%= lead.email %></td>
          <td><%= lead.ip %></td>
          <td><%= lead.created_at %></td>
          <td><%= link_to 'Editar', edit_lead_path(lead) %></td>
          <td><%= link_to 'Remover', lead, method: :delete, data: { confirm: 'TEM CERTEZA!?NÃO TEM VOLTA!' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Ip</th>
        <th>Criado em</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leads_more_ip_filter.each do |lead| %>
        <tr>
          <td><%= lead.name %></td>
          <td><%= lead.email %></td>
          <td><%= lead.ip %></td>
          <td><%= lead.created_at %></td>
          <td><%= link_to 'Editar', edit_lead_path(lead) %></td>
          <td><%= link_to 'Remover', lead, method: :delete, data: { confirm: 'TEM CERTEZA!?NÃO TEM VOLTA!' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
